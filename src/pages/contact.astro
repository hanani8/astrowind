---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Contact"
    title="Let's Connect!"
    subtitle="Fill-in the details to get a call from our support team"
  />

  <!-- GForm for Contact Here! -->

  <Hero>
    <Fragment slot="image">
      <iframe
        class="mx-auto"
        src="https://docs.google.com/forms/d/e/1FAIpQLSfz4FaFUOieTqLHWdikH1OtFtV5hesMz-RSQE1J0zto4ln-eg/viewform?embedded=true"
        width="100%"
        height="1000">Loadingâ€¦</iframe
      ></Fragment
    >
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Contact Information"
    items={[
      {
        title: 'Phone',
        description: '+91 89771 31320',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'lipischool1@gmail.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description:
          'G7JV+5C4, Pranith Colony Rd, Praneeth Colony, Krishna Reddy Pet, Patancheruvu, Hyderabad, Telangana 502032',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <Hero>
    <Fragment slot="title"> Map </Fragment>
    <Fragment slot="image" id="map">
      <iframe
        class="mx-auto"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3804.520712527833!2d78.2935856!3d17.5303783!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bcb8d589c995843%3A0x861932f7d11a2cb!2sLipi%20School!5e0!3m2!1sen!2sin!4v1707195023865!5m2!1sen!2sin"
        width="600"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </Fragment>
  </Hero>
</Layout>
